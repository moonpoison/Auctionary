<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sm.repository.PointRepository">

    <select id="getPoint" parameterType="String" resultType="edu.sm.dto.Point">
        SELECT user_id, point
        FROM point
        WHERE user_id = #{userId}
    </select>

    <update id="updatePoint" parameterType="edu.sm.dto.Point">
        UPDATE point
        SET point = #{point}
        WHERE user_id = #{userId}
    </update>

</mapper>