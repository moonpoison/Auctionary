<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sm.repository.TradeHistoryRepository">

    <select id="findPurchasedProductsByUserId" parameterType="String" resultType="Product">
        SELECT p.*
        FROM Product p
                 JOIN Trade_History t ON p.product_id = t.product_id
        WHERE t.buyer_id = #{userId}
        ORDER BY t.trade_date DESC
    </select>

</mapper>